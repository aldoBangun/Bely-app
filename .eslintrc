{
  "env": {
    "browser": true,
    "es6": true
  },
  "ecmaFeatures": {
    "modules": true
  },
  "parserOptions": {
   "sourceType": "module",
   "ecmaVersion": 2021,
   "ecmaFeatures": {
    "jsx": true
   } 
  },
  "extends": [
    "airbnb",
    "airbnb/hooks",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime"
  ],
  "rules": {
    "semi": ["warn", "never"]
  }
}